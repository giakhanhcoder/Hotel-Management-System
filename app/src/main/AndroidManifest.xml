<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HotelManager"
        android:usesCleartextTraffic="true"> <!-- Allow HTTP for VietQR images -->

        <!-- Login Activity - Launcher -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Guest Dashboard Activity -->
        <activity
            android:name=".GuestDashboardActivity"
            android:exported="false"
            android:label="Guest Dashboard" />

        <!-- Database Debug Activity -->
        <activity
            android:name=".DatabaseDebugActivity"
            android:exported="false"
            android:label="Database Debug" />

        <!-- Booking Dashboard Activity -->
        <activity
            android:name=".BookingDashboardActivity"
            android:exported="false"
            android:label="Booking Management" />

        <!-- Add Booking Activity -->
        <activity
            android:name=".AddBookingActivity"
            android:exported="false"
            android:label="Create Booking" />

        <!-- Booking Detail Activity -->
        <activity
            android:name=".BookingDetailActivity"
            android:exported="false"
            android:label="Booking Details" />

        <!-- Check In Activity -->
        <activity
            android:name=".CheckInActivity"
            android:exported="false"
            android:label="Check-In" />

        <!-- Payment Activity -->
        <activity
            android:name=".PaymentActivity"
            android:exported="false"
            android:label="Payment" />

        <!-- VNPay WebView Activity -->
        <activity
            android:name=".VnPayWebViewActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="app" android:host="vnpay.return" />
            </intent-filter>
        </activity>

        <!-- VietQR Activity -->
        <activity
            android:name=".VietQrActivity"
            android:exported="false"
            android:label="Thanh toÃ¡n VietQR" />

    </application>

</manifest>