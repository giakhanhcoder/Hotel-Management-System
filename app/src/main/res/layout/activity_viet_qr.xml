<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".VietQrActivity">

    <TextView
        android:id="@+id/textViewQrInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Quét mã QR hoặc chuyển khoản thủ công"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <WebView
        android:id="@+id/webViewQrCode"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_below="@+id/textViewQrInstruction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Payment Details Section -->
    <LinearLayout
        android:id="@+id/layoutPaymentDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/webViewQrCode"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/textViewAmountDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            tools:text="Số tiền: 500,000 VND"/>

        <TextView
            android:id="@+id/textViewAccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            tools:text="Tên tài khoản: NGUYEN VAN A"/>

        <TextView
            android:id="@+id/textViewAccountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            tools:text="Số tài khoản: 123456789 (VCB)"/>

        <TextView
            android:id="@+id/textViewOrderInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            tools:text="Nội dung: Thanh toan don hang 123"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewConfirmInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonConfirmPayment"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Sau khi hoàn tất chuyển khoản, vui lòng nhấn nút xác nhận bên dưới."
        android:textAlignment="center" />

    <Button
        android:id="@+id/buttonConfirmPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Tôi đã thanh toán" />

</RelativeLayout>
