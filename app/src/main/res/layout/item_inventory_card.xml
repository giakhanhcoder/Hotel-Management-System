<?xml version="1.0" encoding="utf-8"?>
<!-- Layout mẫu cho Inventory Card -->
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    app:cardCornerRadius="@dimen/corner_radius_normal"
    app:cardElevation="@dimen/elevation_normal"
    android:foreground="@drawable/bg_ripple"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal"
        android:gravity="center_vertical">

        <!-- Item Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Item Name -->
            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Title"
                android:textSize="@dimen/text_size_medium"
                tools:text="Towels" />

            <!-- Item Code & Category -->
            <TextView
                android:id="@+id/tvItemCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:textAppearance="@style/TextAppearance.Caption"
                tools:text="AMN001 • Amenity" />

            <!-- Quantity -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvCurrentQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    tools:text="100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textAppearance="@style/TextAppearance.Caption" />

                <TextView
                    android:id="@+id/tvMinQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Caption"
                    tools:text="20 pieces" />
            </LinearLayout>
        </LinearLayout>

        <!-- Status Badge & Alert -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <!-- Low Stock Badge (conditionally visible) -->
            <TextView
                android:id="@+id/tvLowStockBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_small"
                android:paddingTop="@dimen/padding_tiny"
                android:paddingBottom="@dimen/padding_tiny"
                android:background="@drawable/bg_badge_error"
                android:text="@string/low_stock"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Unit Price -->
            <TextView
                android:id="@+id/tvUnitPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:textAppearance="@style/TextAppearance.Caption"
                tools:text="50,000 VND" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>











