<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".GuestDashboardActivity">

    <!-- App Bar Layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:elevation="@dimen/elevation_normal">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:titleTextColor="@color/text_white"
            app:navigationIcon="@drawable/ic_launcher_foreground"
            app:navigationIconTint="@color/text_white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content - ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_normal">

            <!-- Profile Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/corner_radius_normal"
                app:cardElevation="@dimen/elevation_normal"
                android:foreground="@drawable/bg_ripple"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_normal"
                    android:gravity="center_vertical"
                    android:baselineAligned="false">

                    <!-- Profile Image -->
                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="@dimen/icon_size_large"
                        android:layout_height="@dimen/icon_size_large"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_launcher_foreground"
                        android:background="@drawable/bg_card"
                        android:scaleType="centerCrop"
                        android:padding="@dimen/padding_small"
                        tools:ignore="ContentDescription" />

                    <!-- Name & Email -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvGuestName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Title"
                            android:textStyle="bold"
                            tools:text="Nguyễn Văn A" />

                        <TextView
                            android:id="@+id/tvGuestEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_tiny"
                            android:textAppearance="@style/TextAppearance.Caption"
                            android:textColor="@color/text_secondary"
                            tools:text="nguyenvana@email.com" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:layout_gravity="center_vertical"
                        android:src="@android:drawable/ic_menu_more"
                        android:tint="@color/text_secondary"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Stats Cards - 3 Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_normal">

                <!-- Card 1: Upcoming Bookings -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardUpcomingBookings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_small"
                    app:cardCornerRadius="@dimen/corner_radius_normal"
                    app:cardElevation="@dimen/elevation_normal"
                    app:cardBackgroundColor="@color/room_available">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_normal"
                        android:gravity="center"
                        android:minHeight="@dimen/card_height_small">

                        <TextView
                            android:id="@+id/tvUpcomingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Headline"
                            android:textStyle="bold"
                            android:textColor="@color/text_white"
                            android:gravity="center"
                            tools:text="3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_tiny"
                            android:text="@string/upcoming_bookings"
                            android:textAppearance="@style/TextAppearance.Caption"
                            android:textColor="@color/text_white"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card 2: Past Bookings -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPastBookings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/margin_small"
                    app:cardCornerRadius="@dimen/corner_radius_normal"
                    app:cardElevation="@dimen/elevation_normal"
                    app:cardBackgroundColor="@color/room_reserved">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_normal"
                        android:gravity="center"
                        android:minHeight="@dimen/card_height_small">

                        <TextView
                            android:id="@+id/tvPastCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Headline"
                            android:textStyle="bold"
                            android:textColor="@color/text_white"
                            android:gravity="center"
                            tools:text="5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_tiny"
                            android:text="@string/past_bookings"
                            android:textAppearance="@style/TextAppearance.Caption"
                            android:textColor="@color/text_white"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card 3: Total Spent -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTotalSpent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_small"
                    app:cardCornerRadius="@dimen/corner_radius_normal"
                    app:cardElevation="@dimen/elevation_normal"
                    app:cardBackgroundColor="@color/payment_success">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_normal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalSpent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Medium"
                            android:textStyle="bold"
                            android:textColor="@color/text_white"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end"
                            tools:text="10.5M" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_tiny"
                            android:text="@string/total_spent"
                            android:textAppearance="@style/TextAppearance.Caption"
                            android:textColor="@color/text_white" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Section Title: My Bookings -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/my_bookings"
                android:textAppearance="@style/TextAppearance.Title"
                android:textStyle="bold" />

            <!-- Horizontal RecyclerView for Upcoming Bookings -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerUpcomingBookings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height_normal"
                android:layout_marginBottom="@dimen/margin_normal"
                android:orientation="horizontal"
                tools:listitem="@layout/item_booking_card" />

            <!-- Next Check-in Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNextCheckIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/corner_radius_normal"
                app:cardElevation="@dimen/elevation_normal"
                android:foreground="@drawable/bg_ripple"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_normal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/icon_size_normal"
                        android:layout_height="@dimen/icon_size_normal"
                        android:src="@android:drawable/ic_menu_today"
                        android:tint="@color/primary"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/next_check_in"
                            android:textAppearance="@style/TextAppearance.Caption"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvNextCheckInDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_tiny"
                            android:textAppearance="@style/TextAppearance.Body"
                            android:textStyle="bold"
                            tools:text="15/12/2024 - Phòng 201" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDaysUntil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Medium"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        tools:text="5 ngày" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section Title: Recent Payments -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/recent_payments"
                android:textAppearance="@style/TextAppearance.Title"
                android:textStyle="bold" />

            <!-- Recent Payments List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRecentPayments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_payment_card" />

            <!-- Statistics Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStatistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/corner_radius_normal"
                app:cardElevation="@dimen/elevation_normal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/statistics"
                        android:textAppearance="@style/TextAppearance.Title"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/margin_normal" />

                    <!-- Stat Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_bookings"
                                android:textAppearance="@style/TextAppearance.Caption"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvTotalBookings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_tiny"
                                android:textAppearance="@style/TextAppearance.Body"
                                android:textStyle="bold"
                                tools:text="8" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/average_per_booking"
                                android:textAppearance="@style/TextAppearance.Caption"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvAverageBooking"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_tiny"
                                android:textAppearance="@style/TextAppearance.Body"
                                android:textStyle="bold"
                                tools:text="1,300,000 VND" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Stat Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nights_stayed"
                                android:textAppearance="@style/TextAppearance.Caption"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvNightsStayed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_tiny"
                                android:textAppearance="@style/TextAppearance.Body"
                                android:textStyle="bold"
                                tools:text="12 đêm" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/loyalty_points"
                                android:textAppearance="@style/TextAppearance.Caption"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvLoyaltyPoints"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_tiny"
                                android:textAppearance="@style/TextAppearance.Body"
                                android:textStyle="bold"
                                android:textColor="@color/primary"
                                tools:text="1,250 điểm" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions Grid -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/quick_actions"
                android:textAppearance="@style/TextAppearance.Title"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginBottom="@dimen/margin_normal">

                <!-- Action 1: Find Room -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardActionFindRoom"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height_small"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/margin_small"
                    app:cardCornerRadius="@dimen/corner_radius_normal"
                    app:cardElevation="@dimen/elevation_normal"
                    android:foreground="@drawable/bg_ripple"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/padding_small">

                        <ImageView
                            android:layout_width="@dimen/icon_size_normal"
                            android:layout_height="@dimen/icon_size_normal"
                            android:src="@android:drawable/ic_menu_search"
                            android:tint="@color/primary"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_tiny"
                            android:text="@string/find_room"
                            android:textAppearance="@style/TextAppearance.Caption"
                            android:gravity="center" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Action 2: Create Booking -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardActionCreateBooking"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height_small"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/margin_small"
                    app:cardCornerRadius="@dimen/corner_radius_normal"
                    app:cardElevation="@dimen/elevation_normal"
                    android:foreground="@drawable/bg_ripple"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/padding_small">

                        <ImageView
                            android:layout_width="@dimen/icon_size_normal"
                            android:layout_height="@dimen/icon_size_normal"
                            android:src="@android:drawable/ic_menu_add"
                            android:tint="@color/primary"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_tiny"
                            android:text="@string/create_booking"
                            android:textAppearance="@style/TextAppearance.Caption"
                            android:gravity="center" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Action 3: Booking History -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardActionBookingHistory"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height_small"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/margin_small"
                    app:cardCornerRadius="@dimen/corner_radius_normal"
                    app:cardElevation="@dimen/elevation_normal"
                    android:foreground="@drawable/bg_ripple"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/padding_small">

                        <ImageView
                            android:layout_width="@dimen/icon_size_normal"
                            android:layout_height="@dimen/icon_size_normal"
                            android:src="@android:drawable/ic_menu_recent_history"
                            android:tint="@color/primary"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_tiny"
                            android:text="@string/booking_history"
                            android:textAppearance="@style/TextAppearance.Caption"
                            android:gravity="center" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Action 4: Profile -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardActionProfile"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height_small"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/margin_small"
                    app:cardCornerRadius="@dimen/corner_radius_normal"
                    app:cardElevation="@dimen/elevation_normal"
                    android:foreground="@drawable/bg_ripple"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/padding_small">

                        <ImageView
                            android:layout_width="@dimen/icon_size_normal"
                            android:layout_height="@dimen/icon_size_normal"
                            android:src="@android:drawable/ic_menu_myplaces"
                            android:tint="@color/primary"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_tiny"
                            android:text="@string/profile"
                            android:textAppearance="@style/TextAppearance.Caption"
                            android:gravity="center" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>

            <!-- Empty padding at bottom -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_normal" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
